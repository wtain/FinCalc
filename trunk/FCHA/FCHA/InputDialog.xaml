<Window x:Class="FCHA.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputDialog" Height="300" Width="300" Name="dlgInputBox">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="48" />
        </Grid.ColumnDefinitions>
        
        <TextBox Grid.Column="0" Text="{Binding Mode=TwoWay, Path=Value, ElementName=dlgInputBox}" />
        
        <Button Grid.Column="1" Content="OK" />
    </Grid>
</Window>
