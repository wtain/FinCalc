<Window x:Class="FCHA.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input string" Height="48" Width="200" Name="dlgInputBox" ResizeMode="NoResize" ShowInTaskbar="False" IsVisibleChanged="dlgInputBox_IsVisibleChanged">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="24" />
            <ColumnDefinition Width="48" />
        </Grid.ColumnDefinitions>
        
        <TextBox Name="txtValue" Grid.Column="0" Text="{Binding Mode=TwoWay, Path=Value, ElementName=dlgInputBox}" />
        
        <Button Grid.Column="1" Content="OK" Name="btnOK" Click="btnOK_Click" IsDefault="True" />

        <Button Grid.Column="2" Content="Cancel" Name="btnCancel" Click="btnCancel_Click" IsCancel="True" />
    </Grid>
</Window>
