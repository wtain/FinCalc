<Window x:Class="FCHA.UserInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Info" Height="128" Width="200" Name="dlgUserInput" ResizeMode="NoResize" ShowInTaskbar="False" DataContext="{Binding PersonInfo, ElementName=dlgUserInput}" IsVisibleChanged="dlgUserInput_IsVisibleChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Row="0" Grid.Column="0" Text="User name:" />
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}" TabIndex="1" Name="txtUserName" GotFocus="txtUserName_GotFocus" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Full name:" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding FullName}" TabIndex="2" Name="txtFullName" GotFocus="txtFullName_GotFocus" />
        
        <Button Grid.Row="2" Grid.Column="0" Content="OK" IsDefault="True" Name="btnOK" Click="btnOK_Click" TabIndex="3" />
        <Button Grid.Row="2" Grid.Column="1" Content="Cancel" IsCancel="True" Name="btnCancel" Click="btnCancel_Click" TabIndex="4" />
    </Grid>
</Window>
